<%- include('partials/header') -%>




<section class="mx-auto mt-20 mb-16 w-full max-w-xl p-4 rounded-xl sm:p-6 text-center">

    <h5 class="mb-3 text-base font-semibold md:text-xl text-white text-center">
        THE LIST
    </h5>
    <p class="text-sm font-normal text-gray-400 text-justify">Whether you're a die-hard horror fan or just looking for a good scare, these audience ranked horror movies are sure to send shivers down your spine and keep you on the edge of your seat.</p>
    
    <div class="grid grid-cols-2 items-center pt-10 px-10 uppercase border-b text-gray-500 text-center items-center justify-center tracking-widest text-[8px]">
        <div class="mb-2">Movie Title</div>
        <div class="mb-2">Votes</div>
    </div>
    <ul>
        <% for(var i=0; i<movies.length; i++) {%>

            
            <article class="grid grid-cols-2 items-center p-6 text-base font-bold border-b hover:bg-zinc-800 text-white justify-center">

    
               <div>
                <img src="<%= movies[i].poster%>" alt="<%= movies[i].movieTitle%> movie poster" class="w-full"> 
               
                </div>
    
                <div>
                    
                    <h3 class="text-xl font-medium sm:text-2xl capitalize">
                        <%= movies[i].movieTitle%>
                    </h3>
              
                    <p class="text-[12px] text-gray-50 text-justify py-4 pl-4 font-normal">
                        <%= movies[i].plot%>
                    </p>
    
                    <div class="text-[9px] text-gray-50 font-normal text-left pl-4 grid grid-cols-2">
                        
    
                        <p class="justify-self-end pr-2">
                            <span class="uppercase font-bold tracking-wide">
                                Released
                            </span>
                        </p>
                        <span class="pl-2"><%= movies[i].released%></span>
    
                        <p class="justify-self-end pr-2">
                            <span class="uppercase font-bold tracking-wide">
                                Director
                            </span>
                        </p>
                        <span class="pl-2"><%= movies[i].director%></span>
    
                        <p class="justify-self-end pr-2">
                            <span class="uppercase font-bold tracking-wide">
                                Actors
                            </span>
                        </p>
                        <span class="pl-2"><%= movies[i].actors%></span>

                    </div>
    
               </div>
    
               <div class="col-span-2">
                <form action="/movie/updateVote/<%= movies[i].id%>?_method=PUT" method="POST">
                    <button
                        class="rounded bg-rose-700 px-10 py-2 text-[10px] font-medium text-white mt-6 w-full uppercase"
                    >
                    <%= movies[i].likes%> Votes
                    </button>
                </form>
               </div>
               
            </article>
        <% } %>
    </ul>
    <div class="text-center mt-6"><a href="/" class="text-sm text-gray-500 mb-0 w-full hover:text-gray-400">Click here to vote.</a></div >
</section>


  

<%- include('partials/footer') -%>