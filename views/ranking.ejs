<%- include('partials/header') -%>




<section class="mx-auto mt-20 mb-16 w-full max-w-xl p-4 rounded-xl sm:p-6 text-center">

    <h5 class="mb-3 text-base font-semibold md:text-xl text-white text-center">
        THE LIST
    </h5>
    <p class="text-sm font-normal text-gray-400 text-justify">Whether you're a die-hard horror fan or just looking for a good scare, these audience ranked horror movies are sure to send shivers down your spine and keep you on the edge of your seat.</p>
    
    <div class="grid grid-cols-2 items-center pt-10 px-10 uppercase border-b text-gray-500 text-center items-center justify-center tracking-widest text-[8px]">
        <div class="mb-2">Movie Title</div>
        <div class="mb-2">Votes</div>
    </div>
    <ul>
        <% for(var i=0; i<movies.length; i++) {%>
            <!-- below image would be variable from model -->
            
            <li>
                
                <div class="grid grid-cols-2 items-center p-10 text-base font-bold border-b hover:bg-zinc-800 text-white justify-items-center mx-auto">

                    <div>
                        <img src="<%= movies[i].poster%>" alt="<%= movies[i].movieTitle%> movie poster" class="pb-2">
                        <span class="whitespace-wrap text-xl text-center font-normal capitalize tracking-wide">
                            <%= movies[i].movieTitle%>
                        </span>
                    </div>
                        
                    <!-- add form to update the votes straight from the list -->
                    <!-- create another 'wrong answer' ejs, for if SCREAM is not chosen as an answer -->
                    <form action="/movie/updateVote/<%= movies[i].id%>?_method=PUT" method="POST">
                        <button type="submit" class="px-8 py-6 text-sm font-medium bg-zinc-700 text-gray-200 uppercase tracking-wide hover:bg-zinc-600 active:bg-zinc-500">
                            <%= movies[i].likes%> Votes
                        </button>
                    </form>

                    

                </div>
            </li>
        <% } %>
    </ul>
    <div class="text-center mt-6"><a href="/" class="text-sm text-gray-500 mb-0 w-full hover:text-gray-400">Click here to vote.</a></div >
</section>


  

<%- include('partials/footer') -%>